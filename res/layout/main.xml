<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="用户名"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="密码"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_login"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:text="登陆" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:text="注册" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_json_login"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:text="json方式" />

        <Button
            android:id="@+id/btn_xml_login"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:text="xml方式" />
    </LinearLayout>

    <TextView
        android:id="@+id/show_login"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:text="登陆中...."
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/upload_file_path"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="文件地址......"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_choose_pic"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="选择图片" />

                <Button
                    android:id="@+id/btn_choose_file"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="选择文件" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_download_pic"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="下载图片" />

                <Button
                    android:id="@+id/btn_upload_file"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="上传文件" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_get_filelist"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="获取文件列表下载" />

                <Button
                    android:id="@+id/btn_download_files"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="下载多文件" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_bbs"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="论坛" />
                
                <Button
                    android:id="@+id/btn_chat"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="聊天室" />
                
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/upload_info"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="上传文件......"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/download_image"
            android:layout_width="126dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_launcher" />

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="150dp"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tv_filelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="File"
                android:textSize="16dp" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>